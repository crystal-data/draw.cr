module Draw
  extend self

  def vector_distance(dx : Float64, dy : Float64)
    Math.sqrt(dx*dx + dy*dy).to_f64
  end

  def distance(x1 : Float64, y1 : Float64, x2 : Float64, y2 : Float64)
    Draw.vector_distance(x2 - x1, y2 - y1)
  end
end
